@{
    ViewData["Title"] = "تسجيل جديد";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl" >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل جديد</title>
    <link rel="stylesheet" href="~/CSS/Styles.css">
    <link rel="stylesheet" href="~/CSS/Styles3.css">
    <link rel="icon" href="~/Images/ICO.png" type="image/png">
    <script src="~/Javascript/Functions.js"></script>
</head>
<body>
    <a href="front_home">
        <img class="driverlogo" src="~/Images/ICO.png" alt="Logo">
    </a>
    <main>
      <form class="signup-form" asp-controller="Signup" asp-action="Register" method="post">
    <h2>تسجيل جديد</h2>
    <div class="form-group">
        <label asp-for="Username">اسم المستخدم:</label>
        <input asp-for="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email">البريد الإلكتروني:</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Password">كلمة المرور:</label>
        <input asp-for="Password" type="password" class="form-control" oninput="checkPasswordStrength()" required />
        <div id="passwordStrength"></div>
    </div>
    <div class="form-group">
        <label>تأكيد كلمة المرور:</label>
        <input type="password" name="confirmPassword" class="form-control" required />
    </div>
    <p class="additional-statement">باستمرارك، فإنك توافق على شروط استخدام المتجر وإشعار الخصوصية.</p>
    <button type="submit" class="btn btn-primary">تسجيل جديد</button>
</form>

        <div id="confirmation-modal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal()">&times;</span>
                <h2>تأكيد الحساب</h2>
                <p>تم إرسال رمز التأكيد إلى بريدك الإلكتروني. الرجاء التحقق من بريدك وإدخال الرمز أدناه:</p>
                <input type="text" id="confirmation-code" placeholder="رمز التأكيد" required="" style="width: 100%;">
                <button onclick="submitConfirmationCode()">تأكيد</button>
            </div>
        </div>
    </main>

    <footer>
        <p dir="ltr">&copy; 2024 - جميع الحقوق محفوظة</p>
        |
        <a href="front_privacy_policy">سياسة الخصوصية</a>
      
        <a href="front_about">من نحن</a>
        |
        <div class="social-links">
            <strong>تواصل معنا:</strong>
            <a href="@(Url.Content("https://youtube.com/@-StationeryStore?si=XlmT8B-DREJrxxNw"))">
                <img src="~/Images/Youtube.png" alt="Youtube Icon">
            </a>

            <a href="https://www.facebook.com/profile.php?id=61558642717289&mibextid=ZbWKwL">
                <img src="~/Images/facebook-icon.png" alt="Facebook Icon">
            </a>

            <a href="https://web.whatsapp.com/">
                <img src="~/Images/phone-call.png" alt="Phone Icon">
            </a>

        </div>
    </footer>

</body>
</html>
